<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.unify.Starting" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="RobotoBoldTextAppearance">
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>
</resources>