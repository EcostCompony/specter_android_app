<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".channel.ChannelActivity"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/channel_head"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="23dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/avatar" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="7dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_channel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:letterSpacing="-0.00"
                    android:textSize="13sp"
                    tools:text="влог пранкеры 2007" />

                <TextView
                    android:id="@+id/number_subscribers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#9C9C9C"
                    android:textSize="10sp"
                    tools:text="0 подписчиков" />


            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/button_sub"
            android:layout_marginStart="10dp"
            android:text="@string/button_subscribe"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:fontFamily="@font/inter_bold"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageView
                android:id="@+id/button_close"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/close" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="#EAEAEA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/post_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_gravity="bottom"
            android:overScrollMode="never" />

        <TextView
            android:id="@+id/edit_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/manrope_extra_bold"
            android:visibility="gone"
            android:textColor="@color/main_color"
            android:text="@string/edit_post" />

        <LinearLayout
            android:id="@+id/tools_menu"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/input_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="12dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="11dp"
                android:background="@drawable/input_message"
                android:hint="@string/input_text"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:layout_weight="1"
                android:textColorHint="#9C9C9C"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:gravity="end">

                <ImageView
                    android:id="@+id/button_enter"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/send" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>