<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginTop="3dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="73dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/channel_header"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="25dp"
                        app:cardCornerRadius="40dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/channel_photo" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:fontFamily="@font/inter_bold"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/number_subscribers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"
                            android:textColor="@color/channel_number_subscribers_text"
                            android:textSize="10sp"
                            tools:ignore="SmallSp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/button_subscribe"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/button_subscribe"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:text="@string/channel_button_subscribe"
                    android:visibility="gone" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/hitbox_button_close"
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:layout_gravity="end">

                <View
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_cross" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="12dp"
                android:background="@color/divider_color" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:gravity="bottom">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_posts_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:overScrollMode="never" />

            <FrameLayout
                android:id="@+id/admin_panel"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/editing_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:fontFamily="@font/manrope_extra_bold"
                    android:textColor="@color/main_color"
                    android:textSize="13sp"
                    android:text="@string/channel_editing_mode"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/input_post"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="50dp"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    android:background="@drawable/input"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="7dp"
                    android:fontFamily="@font/inter_medium"
                    android:textColorHint="@color/input_hint"
                    android:textSize="12sp"
                    android:hint="@string/channel_input_post_hint" />

                <FrameLayout
                    android:id="@+id/hitbox_button_send"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end">

                    <View
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"
                        android:background="@drawable/icon_arrow_right" />
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/dim_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40000000"
        android:visibility="invisible" />
</FrameLayout>