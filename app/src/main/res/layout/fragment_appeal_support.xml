<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".support.AppealSupportFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="3dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/button_close"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_marginStart="25dp"
                android:elevation="6dp"
                app:cardCornerRadius="14.5dp">

                <View
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_cross"
                    android:contentDescription="@string/main_menu_button_content_description_close" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="13sp"
                    android:text="@string/support_header" />

                <TextView
                    android:id="@+id/appeal_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="10sp"
                    android:textColor="@color/channel_body_color"
                    tools:text="Я нашел баг"
                    tools:ignore="SmallSp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="12dp"
            android:background="@color/divider_color" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_support_message_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:overScrollMode="never" />

        <FrameLayout
            android:id="@+id/sender_menu"
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <EditText
                android:id="@+id/input_support_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:autofillHints="faq post text"
                android:layout_marginVertical="14dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/input"
                android:paddingHorizontal="14dp"
                android:paddingVertical="7dp"
                android:textColorHint="@color/channel_input_post_color_hint"
                android:fontFamily="@font/inter_medium"
                android:textSize="12sp"
                android:hint="@string/faq_support_input_hint_faq_post" />

            <LinearLayout
                android:id="@+id/button_send"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:gravity="center">

                <View
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/icon_send" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>