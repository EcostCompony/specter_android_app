<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".menu.ChannelsSearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_channel_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:autofillHints="channel title"
            android:layout_weight="1"
            android:layout_marginVertical="9dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/input"
            android:fontFamily="@font/inter_semi_bold"
            android:hint="@string/channels_search_input_channel_title_hint"
            android:inputType="text"
            android:paddingStart="18dp"
            android:paddingEnd="46dp"
            android:textColorHint="@color/channel_input_post_color_hint"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/button_close"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:elevation="6dp"
                app:cardCornerRadius="14.5dp">

                <View
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_cross"
                    android:contentDescription="@string/main_menu_button_content_description_close" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_channels_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never" />

    <TextView
        android:id="@+id/number_channels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/channels_menu_number_channels"
        android:fontFamily="@font/inter_regular"
        android:textSize="12sp" />
</LinearLayout>