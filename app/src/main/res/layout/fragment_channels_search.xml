<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_search_string"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="9dp"
            android:layout_marginStart="25dp"
            android:inputType="text"
            android:importantForAutofill="no"
            android:background="@drawable/input"
            android:paddingStart="18dp"
            android:paddingEnd="46dp"
            android:fontFamily="@font/inter_semi_bold"
            android:textColorHint="@color/input_hint"
            android:textSize="12sp"
            android:hint="@string/channels_search_input_search_string_hint" />

        <LinearLayout
            android:id="@+id/hitbox_button_close"
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:elevation="6dp"
                app:cardCornerRadius="29dp">

                <View
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_cross" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_channels_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never" />
</LinearLayout>