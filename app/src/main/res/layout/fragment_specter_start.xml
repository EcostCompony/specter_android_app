<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <View
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/divider_bottom_sheet" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bottom_sheet">

        <TextView
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="5dp"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="22sp"
            android:text="@string/specter_start_header" />

        <TextView
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:paddingHorizontal="16dp"
            android:textColor="@color/parameter_header"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="12sp"
            android:text="@string/specter_start_input_name_header"
            android:labelFor="@+id/input_name" />

        <EditText
            android:id="@+id/input_name"
            android:layout_width="337dp"
            android:layout_height="38dp"
            android:layout_marginTop="4dp"
            android:inputType="text"
            android:importantForAutofill="no"
            android:background="@drawable/input"
            android:paddingHorizontal="13dp"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="12sp" />

        <TextView
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:paddingHorizontal="16dp"
            android:textColor="@color/parameter_header"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="12sp"
            android:text="@string/specter_start_input_short_link_header"
            android:labelFor="@+id/input_short_link" />

        <RelativeLayout
            android:layout_width="337dp"
            android:layout_height="38dp"
            android:layout_marginTop="4dp">

            <EditText
                android:id="@+id/input_short_link"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:importantForAutofill="no"
                android:digits="abcdefghijklmnopqrstuvwxyz0123456789_."
                android:background="@drawable/input"
                android:paddingStart="25dp"
                android:paddingEnd="13dp"
                android:textColor="@color/main_color"
                android:fontFamily="@font/inter_semi_bold"
                android:textSize="12sp" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:textColor="@color/main_color"
                android:fontFamily="@font/inter_semi_bold"
                android:textSize="12sp"
                android:text="@string/symbol_at" />
        </RelativeLayout>

        <Button
            android:id="@+id/button_start"
            android:layout_width="337dp"
            android:layout_height="37dp"
            android:layout_marginVertical="22dp"
            android:background="@drawable/button_neutral"
            android:textColor="@color/main_color"
            android:fontFamily="@font/inter_bold"
            android:textSize="12sp"
            android:text="@string/specter_start_button_start" />
    </LinearLayout>
</FrameLayout>