<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background">

    <TextView
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manrope_extra_bold"
        android:textSize="24sp"
        android:text="@string/sign_in_header" />

    <TextView
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:textColor="@color/description_auth_text"
        android:fontFamily="@font/manrope_regular"
        android:textSize="14sp"
        android:text="@string/confirm_code_sign_in_description" />

    <EditText
        android:id="@+id/input_code"
        android:layout_width="326dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:autofillHints="code"
        android:paddingHorizontal="17dp"
        android:background="@drawable/input_auth"
        android:textColorHint="@color/input_auth_hint"
        android:fontFamily="@font/manrope_semi_bold"
        android:textSize="16sp"
        android:hint="@string/confirm_code_sign_in_input_code_hint" />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="326dp"
        android:layout_height="55dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/button_auth"
        android:textColor="@color/button_auth_text"
        android:fontFamily="@font/manrope_bold"
        android:textSize="16sp"
        android:text="@string/confirm_code_sign_in_button_confirm" />
</LinearLayout>