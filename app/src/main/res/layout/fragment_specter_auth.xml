<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".channel.ChannelSettingsFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_gravity="center_vertical"
            android:textSize="22sp"
            android:fontFamily="@font/inter_semi_bold"
            android:text="@string/specter_auth_header" />

        <Button
            android:id="@+id/button_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/button_subscribe"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_vertical|end"
            android:text="@string/sign_outt"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:fontFamily="@font/inter_bold"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:textAllCaps="false" />
    </FrameLayout>

    <TextView
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textSize="12sp"
        android:layout_marginTop="26dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textColor="#C0C0C0"
        android:text="@string/name1" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="337dp"
        android:layout_height="38dp"
        android:inputType="textPersonName"
        android:background="@drawable/input"
        android:paddingHorizontal="16dp"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/inter_semi_bold"
        android:layout_marginBottom="22dp"
        tools:text="федя йо" />

    <TextView
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textColor="#C0C0C0"
        android:text="@string/link" />

    <RelativeLayout
        android:layout_width="337dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="11dp">

        <EditText
            android:id="@+id/edit_link"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:background="@drawable/input"
            android:textSize="12sp"
            android:paddingHorizontal="29dp"
            android:fontFamily="@font/inter_semi_bold"
            android:textColor="@color/main_color"
            tools:text="fedya"
            android:autofillHints="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:fontFamily="@font/inter_semi_bold"
            android:textColor="@color/main_color"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="@string/symbol_at" />
    </RelativeLayout>

    <Button
        android:id="@+id/sign_in"
        android:layout_width="128dp"
        android:layout_height="37dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_neutral"
        android:textColor="@color/main_color"
        android:fontFamily="@font/inter_bold"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:text="@string/sign_in" />
</LinearLayout>