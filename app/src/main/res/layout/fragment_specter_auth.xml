<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1C1C1C33"
    tools:context=".channel.ChannelSettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="277dp"
        android:layout_gravity="bottom"
        android:background="@drawable/panel_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_semi_bold"
            android:text="@string/get_started"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="21dp"
            android:paddingHorizontal="16dp"
            android:fontFamily="@font/inter_semi_bold"
            android:text="@string/name"
            android:textColor="@color/ford_autumn_smoke"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="337dp"
            android:layout_height="38dp"
            android:autofillHints="name"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/input_message"
            android:fontFamily="@font/inter_semi_bold"
            android:inputType="textPersonName"
            android:paddingHorizontal="16dp"
            android:textSize="12sp"
            tools:ignore="LabelFor" />

        <TextView
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="11dp"
            android:paddingHorizontal="16dp"
            android:fontFamily="@font/inter_semi_bold"
            android:text="@string/link"
            android:textColor="@color/ford_autumn_smoke"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="337dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp">

            <EditText
                android:id="@+id/input_short_link"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="short_user_link"
                android:background="@drawable/input_message"
                android:fontFamily="@font/inter_semi_bold"
                android:inputType="text"
                android:paddingHorizontal="26dp"
                android:textColor="@color/background"
                android:textSize="12sp"
                tools:ignore="LabelFor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_semi_bold"
                android:gravity="center_vertical"
                android:paddingHorizontal="13dp"
                android:text="@string/symbol_at"
                android:textColor="@color/background"
                android:textSize="12sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/sign_in"
            android:layout_width="337dp"
            android:layout_height="37dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_neutral"
            android:fontFamily="@font/inter_bold"
            android:text="@string/sign_in"
            android:textAllCaps="false"
            android:textColor="@color/background"
            android:textSize="12sp" />
    </LinearLayout>

</FrameLayout>