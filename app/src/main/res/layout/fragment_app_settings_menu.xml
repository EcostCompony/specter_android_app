<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="13dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textColor="@color/parameter_header"
        android:textSize="12sp"
        android:text="@string/app_settings_menu_spinner_theme_header"
        android:labelFor="@+id/spinner_themes" />

    <FrameLayout
        android:layout_width="340dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp">

        <Spinner
            android:id="@+id/spinner_themes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input"
            android:paddingHorizontal="13dp" />

        <View
            android:layout_width="11dp"
            android:layout_height="7dp"
            android:layout_marginEnd="18dp"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/icon_arrow_down" />
    </FrameLayout>

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="13dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textColor="@color/parameter_header"
        android:textSize="12sp"
        android:text="@string/app_settings_menu_spinner_languages_header" />

    <FrameLayout
        android:layout_width="340dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp">

        <Spinner
            android:id="@+id/spinner_languages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input"
            android:paddingHorizontal="13dp" />

        <View
            android:layout_width="11dp"
            android:layout_height="7dp"
            android:layout_marginEnd="18dp"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/icon_arrow_down" />
    </FrameLayout>
</LinearLayout>