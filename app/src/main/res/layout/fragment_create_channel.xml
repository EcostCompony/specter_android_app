<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/background"
    tools:context=".menu.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/button_close"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginStart="26dp"
            android:elevation="6dp"
            app:cardCornerRadius="29dp">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:contentDescription="@string/close"
                android:src="@drawable/union"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="22sp"
            android:text="@string/channel_creating" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/channel_photo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="7dp"
        app:cardCornerRadius="90dp">

        <ImageView
            android:id="@+id/image_channel_photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="@string/avatar"
            android:src="@drawable/channel_photo" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/main_color"
        android:textSize="11sp"
        android:text="@string/choose_photo" />

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingHorizontal="13dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textSize="12sp"
        android:textColor="@color/ford_autumn_smoke"
        android:text="@string/title" />

    <EditText
        android:id="@+id/input_title"
        android:layout_width="340dp"
        android:layout_height="38dp"
        android:inputType="text"
        android:autofillHints="title"
        android:layout_marginTop="4dp"
        android:background="@drawable/input_message"
        android:paddingHorizontal="13dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textSize="12sp"
        tools:ignore="LabelFor" />

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:paddingHorizontal="13dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textColor="@color/ford_autumn_smoke"
        android:textSize="12sp"
        android:text="@string/short_link" />

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/input_short_link"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:autofillHints="short_user_link"
            android:background="@drawable/input_message"
            android:paddingHorizontal="26dp"
            android:fontFamily="@font/inter_semi_bold"
            android:textColor="@color/main_color"
            android:textSize="12sp"
            tools:ignore="LabelFor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingHorizontal="13dp"
            android:fontFamily="@font/inter_semi_bold"
            android:textColor="@color/main_color"
            android:textSize="12sp"
            android:text="@string/symbol_at" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_create_channel"
        android:layout_width="340dp"
        android:layout_height="37dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/button_neutral"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/main_color"
        android:textSize="12sp"
        android:text="@string/create_channel" />
</LinearLayout>