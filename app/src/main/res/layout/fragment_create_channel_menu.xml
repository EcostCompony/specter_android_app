<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/button_close"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginStart="26dp"
            android:elevation="6dp"
            app:cardCornerRadius="29dp">

            <View
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:background="@drawable/icon_cross" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="22sp"
            android:text="@string/create_channel_menu_header" />
    </LinearLayout>

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingHorizontal="13dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textColor="@color/parameter_header"
        android:textSize="12sp"
        android:text="@string/create_channel_menu_input_title_header"
        android:labelFor="@+id/input_title" />

    <EditText
        android:id="@+id/input_title"
        android:layout_width="340dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:inputType="text"
        android:importantForAutofill="no"
        android:background="@drawable/input"
        android:paddingHorizontal="13dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textSize="12sp" />

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:paddingHorizontal="13dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textColor="@color/parameter_header"
        android:textSize="12sp"
        android:text="@string/create_channel_menu_input_short_link_header"
        android:labelFor="@+id/input_short_link" />

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/input_short_link"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:importantForAutofill="no"
            android:background="@drawable/input"
            android:paddingHorizontal="25dp"
            android:fontFamily="@font/inter_semi_bold"
            android:textColor="@color/main_color"
            android:textSize="12sp" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:fontFamily="@font/inter_semi_bold"
            android:textColor="@color/main_color"
            android:textSize="12sp"
            android:text="@string/symbol_at" />
    </RelativeLayout>

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingHorizontal="13dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textColor="@color/parameter_header"
        android:textSize="12sp"
        android:text="@string/create_channel_menu_spinner_category_header"
        android:labelFor="@+id/spinner_category" />

    <FrameLayout
        android:layout_width="340dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp">

        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input"
            android:paddingHorizontal="13dp" />

        <View
            android:layout_width="11dp"
            android:layout_height="7dp"
            android:layout_marginEnd="18dp"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/icon_arrow_down" />
    </FrameLayout>

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingHorizontal="13dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textColor="@color/parameter_header"
        android:textSize="12sp"
        android:text="@string/create_channel_menu_input_description_header"
        android:labelFor="@+id/input_description" />

    <EditText
        android:id="@+id/input_description"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="8"
        android:importantForAutofill="no"
        android:background="@drawable/input"
        android:paddingVertical="10dp"
        android:paddingHorizontal="13dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button_create_channel"
        android:layout_width="340dp"
        android:layout_height="37dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/button_neutral"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/main_color"
        android:textSize="12sp"
        android:text="@string/create_channel_menu_button_create_channel" />
</LinearLayout>