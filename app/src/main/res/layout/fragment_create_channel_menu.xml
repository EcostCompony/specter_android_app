<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/background"
    tools:context=".menu.CreateChannelMenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/button_close"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginStart="26dp"
            android:elevation="6dp"
            app:cardCornerRadius="14.5dp">

            <View
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:background="@drawable/union"
                android:contentDescription="@string/crate_channel_menu_content_description_close" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="22sp"
            android:text="@string/create_channel_menu_header" />
    </LinearLayout>

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingHorizontal="13dp"
        android:textColor="@color/parametrs_header"
        android:fontFamily="@font/inter_semi_bold"
        android:textSize="12sp"
        android:text="@string/create_channel_menu_parametr_header_title" />

    <EditText
        android:id="@+id/input_title"
        android:layout_width="340dp"
        android:layout_height="38dp"
        android:inputType="text"
        android:autofillHints="title"
        android:layout_marginTop="4dp"
        android:background="@drawable/main_input"
        android:paddingHorizontal="13dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textSize="12sp"
        tools:ignore="LabelFor" />

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:paddingHorizontal="13dp"
        android:textColor="@color/parametrs_header"
        android:fontFamily="@font/inter_semi_bold"
        android:textSize="12sp"
        android:text="@string/create_channel_menu_parametr_header_short_link" />

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/input_short_channel_link"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:autofillHints="short_channel_link"
            android:background="@drawable/main_input"
            android:paddingHorizontal="25dp"
            android:textColor="@color/main_color"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="12sp"
            tools:ignore="LabelFor" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:textColor="@color/main_color"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="12sp"
            android:text="@string/symbol_at" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_create_channel"
        android:layout_width="340dp"
        android:layout_height="37dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/button_neutral"
        android:textColor="@color/main_color"
        android:fontFamily="@font/inter_bold"
        android:textSize="12sp"
        android:text="@string/create_channel_menu_button_create_channel" />
</LinearLayout>