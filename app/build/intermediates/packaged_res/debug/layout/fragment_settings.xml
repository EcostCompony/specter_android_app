<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white"
    tools:context=".menu.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/button_close"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginStart="26dp"
            android:elevation="6dp"
            app:cardCornerRadius="29dp">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:contentDescription="@string/close"
                android:src="@drawable/union"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="22sp"
            android:text="@string/settings" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="11dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/button_chapter_channels"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/button_chapter"
                android:paddingHorizontal="21dp"
                android:textColor="@color/medium_light_grey"
                android:fontFamily="@font/inter_extra_bold"
                android:textSize="11sp"
                android:text="@string/account" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:paddingHorizontal="13dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textSize="12sp"
        android:textColor="@color/ford_autumn_smoke"
        android:text="@string/name" />

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_title"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:autofillHints="title"
            android:background="@drawable/input_message"
            android:fontFamily="@font/inter_semi_bold"
            android:inputType="text"
            android:paddingHorizontal="13dp"
            android:textSize="12sp"
            tools:ignore="LabelFor" />

        <ImageButton
            android:id="@+id/button_save_name"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="12dp"
            android:layout_gravity="bottom"
            android:background="@drawable/button_permissive"
            android:visibility="gone"
            android:src="@drawable/check_mark"
            android:contentDescription="@string/save" />
    </LinearLayout>

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:paddingHorizontal="13dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textColor="@color/ford_autumn_smoke"
        android:textSize="12sp"
        android:text="@string/short_link" />

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:layout_marginTop="4dp">

            <EditText
                android:id="@+id/input_short_link"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="short_user_link"
                android:background="@drawable/input_message"
                android:fontFamily="@font/inter_semi_bold"
                android:inputType="text"
                android:paddingHorizontal="26dp"
                android:textColor="@color/background"
                android:textSize="12sp"
                tools:ignore="LabelFor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_semi_bold"
                android:gravity="center_vertical"
                android:paddingHorizontal="13dp"
                android:text="@string/symbol_at"
                android:textColor="@color/background"
                android:textSize="12sp" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/button_save_short_link"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="12dp"
            android:layout_gravity="bottom"
            android:background="@drawable/button_permissive"
            android:visibility="gone"
            android:src="@drawable/check_mark"
            android:contentDescription="@string/save" />
    </LinearLayout>

    <Button
        android:id="@+id/button_sign_out"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginTop="22dp"
        android:paddingHorizontal="19dp"
        android:background="@drawable/button_negative"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/red"
        android:textSize="12sp"
        android:text="@string/sign_out" />
</LinearLayout>